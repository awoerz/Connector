@model IEnumerable<Connector.Models.ContactListItem>
@{
    ViewBag.Title = "Contacts";
}

<div class="d-flex justify-content-between my-5">
    <h2>Contacts</h2>
    @Html.ActionLink("Create New +", "Create", null, htmlAttributes: new { @class = "btn btn-primary"})
</div>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SaveResult"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}



<div class="d-flex flex-wrap my-5">
    <div class="row g-5">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="card accent-color" style="width: 18rem;">
                    <div class="card-body my-3">
                        <h5>@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text">
                        | @Html.DisplayNameFor(model => model.Email) :<br />
                        @Html.DisplayFor(modelItem => item.Email)<br />
                        | @Html.DisplayNameFor(model => model.PhoneNumber) :<br />
                        @Html.DisplayFor(modelItem => item.PhoneNumber)<br />
                        | @Html.DisplayNameFor(model => model.MyProperty) :<br />
                        @Html.DisplayFor(modelItem => item.MyProperty)</p>

                        @Html.ActionLink("Edit", "Edit", new { id = item.ContactId }, htmlAttributes: new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ContactId }, htmlAttributes: new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ContactId }, htmlAttributes: new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }

    </div>
</div>


